<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-table-orders" author="kaoutar">
        <createTable tableName="orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="model_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="order_type" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- Foreign key vers User (client) -->
        <addForeignKeyConstraint
                baseTableName="orders"
                baseColumnNames="client_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_orders_client"/>

        <!-- Foreign key vers Model -->
        <addForeignKeyConstraint
                baseTableName="orders"
                baseColumnNames="model_id"
                referencedTableName="model"
                referencedColumnNames="id"
                constraintName="fk_orders_model"/>
    </changeSet>

</databaseChangeLog>
